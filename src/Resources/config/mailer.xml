<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <services>
    <service id="nucleos_profile.mailer.default" class="Nucleos\ProfileBundle\Mailer\Mailer">
      <argument type="service" id="mailer.mailer"/>
      <argument type="service" id="translator"/>
      <argument type="service" id="router"/>
      <argument>%nucleos_profile.registration.confirmation.from_email%</argument>
    </service>
    <service id="nucleos_profile.mailer.noop" class="Nucleos\ProfileBundle\Mailer\NoopMailer"/>
  </services>
</container>
