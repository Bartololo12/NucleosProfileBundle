<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <services>
    <service id="Nucleos\ProfileBundle\Form\Type\RegistrationFormType">
      <tag name="form.type"/>
      <argument>%nucleos_profile.registration.form.model%</argument>
    </service>
    <service id="Nucleos\ProfileBundle\Action\RegistrationAction" public="true">
      <argument type="service" id="event_dispatcher"/>
      <argument type="service" id="form.factory"/>
      <argument type="service" id="nucleos_user.user_manager"/>
      <argument type="service" id="router"/>
      <argument type="service" id="twig"/>
      <argument>%nucleos_profile.registration.form.model%</argument>
    </service>
    <service id="Nucleos\ProfileBundle\Action\CheckRegistrationMailAction" public="true">
      <argument type="service" id="nucleos_user.user_manager"/>
      <argument type="service" id="twig"/>
      <argument type="service" id="router"/>
    </service>
    <service id="Nucleos\ProfileBundle\Action\ConfirmRegistrationAction" public="true">
      <argument type="service" id="event_dispatcher"/>
      <argument type="service" id="nucleos_user.user_manager"/>
      <argument type="service" id="router"/>
    </service>
    <service id="Nucleos\ProfileBundle\Action\RegistrationConfirmedAction" public="true">
      <argument type="service" id="twig"/>
      <argument type="service" id="security.helper"/>
      <argument type="service" id="security.token_storage"/>
    </service>
  </services>
</container>
